{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "description": "Line chart of Horsepower over time",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/cars.json",
            "format": {
                "type": "json",
                "parse": {
                    "Year": "date",
                    "Horsepower": "number"
                }
            },
            "transform": [
                {
                    "type": "formula",
                    "as": "year_Year",
                    "expr": "datetime(year(datum[\"Year\"]), 0, 1, 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "year_Year"
                    ],
                    "ops": [
                        "mean"
                    ],
                    "fields": [
                        "Horsepower"
                    ],
                    "as": [
                        "mean_Horsepower"
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"year_Year\"] !== null && !isNaN(datum[\"year_Year\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "text",
            "style": [
                "text"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "year_Year"
                    },
                    "y": {
                        "scale": "y",
                        "field": "mean_Horsepower"
                    },
                    "text": {
                        "signal": "timeFormat(datum[\"year_Year\"], '%Y')"
                    },
                    "align": {
                        "value": "center"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "time",
            "domain": {
                "data": "source_0",
                "field": "year_Year"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ]
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "mean_Horsepower"
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "grid": false,
            "title": "Year (year)",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%Y')"
                        }
                    }
                }
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": false,
            "title": "Mean of Horsepower",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "gridScale": "x",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
