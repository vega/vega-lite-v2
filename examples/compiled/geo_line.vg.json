{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "description": "Line drawn between airports in the U.S. simulating a flight itinerary",
    "autosize": "pad",
    "padding": 5,
    "width": 800,
    "height": 500,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "values": [
                {
                    "airport": "SEA",
                    "order": 1
                },
                {
                    "airport": "SFO",
                    "order": 2
                },
                {
                    "airport": "LAX",
                    "order": 3
                },
                {
                    "airport": "LAS",
                    "order": 4
                },
                {
                    "airport": "DFW",
                    "order": 5
                },
                {
                    "airport": "DEN",
                    "order": 6
                },
                {
                    "airport": "ORD",
                    "order": 7
                },
                {
                    "airport": "JFK",
                    "order": 8
                }
            ]
        },
        {
            "name": "source_1",
            "url": "data/us-10m.json",
            "format": {
                "type": "topojson",
                "feature": "states"
            }
        },
        {
            "name": "source_2",
            "url": "data/airports.csv",
            "format": {
                "type": "csv"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "lookup",
                    "from": "source_2",
                    "key": "iata",
                    "fields": [
                        "airport"
                    ],
                    "values": [
                        "latitude",
                        "longitude"
                    ]
                },
                {
                    "type": "geojson",
                    "fields": [
                        "longitude",
                        "latitude"
                    ],
                    "signal": "layer_2_geojson_0"
                },
                {
                    "type": "geopoint",
                    "projection": "projection",
                    "fields": [
                        "longitude",
                        "latitude"
                    ],
                    "as": [
                        "layer_2_x",
                        "layer_2_y"
                    ]
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_2",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"longitude\"])",
                    "as": "longitude"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"latitude\"])",
                    "as": "latitude"
                },
                {
                    "type": "geojson",
                    "fields": [
                        "longitude",
                        "latitude"
                    ],
                    "signal": "layer_1_geojson_0"
                },
                {
                    "type": "geopoint",
                    "projection": "projection",
                    "fields": [
                        "longitude",
                        "latitude"
                    ],
                    "as": [
                        "layer_1_x",
                        "layer_1_y"
                    ]
                }
            ]
        }
    ],
    "projections": [
        {
            "name": "projection",
            "size": {
                "signal": "[width, height]"
            },
            "fit": {
                "signal": "[data('source_1'), layer_1_geojson_0, layer_2_geojson_0]"
            },
            "type": "albersUsa"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "shape",
            "style": [
                "geoshape"
            ],
            "from": {
                "data": "source_1"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#eee"
                    },
                    "stroke": {
                        "value": "white"
                    }
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "projection": "projection"
                }
            ]
        },
        {
            "name": "layer_1_marks",
            "type": "symbol",
            "style": [
                "circle"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0.7
                    },
                    "fill": {
                        "value": "gray"
                    },
                    "x": {
                        "field": "layer_1_x"
                    },
                    "y": {
                        "field": "layer_1_y"
                    },
                    "size": {
                        "value": 5
                    },
                    "shape": {
                        "value": "circle"
                    }
                }
            }
        },
        {
            "name": "layer_2_marks",
            "type": "line",
            "style": [
                "line"
            ],
            "sort": {
                "field": [
                    "datum[\"order\"]"
                ],
                "order": [
                    "ascending"
                ]
            },
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "#4c78a8"
                    },
                    "x": {
                        "field": "layer_2_x"
                    },
                    "y": {
                        "field": "layer_2_y"
                    }
                }
            }
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
