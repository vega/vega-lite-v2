{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/barley.json",
            "format": {
                "type": "json"
            },
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "variety"
                    ],
                    "ops": [
                        "mean",
                        "stdev"
                    ],
                    "fields": [
                        "yield",
                        "yield"
                    ],
                    "as": [
                        "mean",
                        "stdev"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "datum.mean-datum.stdev",
                    "as": "lower"
                },
                {
                    "type": "formula",
                    "expr": "datum.mean+datum.stdev",
                    "as": "upper"
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"mean\"])",
                    "as": "mean"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"mean\"] !== null && !isNaN(datum[\"mean\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"upper\"] !== null && !isNaN(datum[\"upper\"])"
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "y_step",
            "value": 21
        },
        {
            "name": "height",
            "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "symbol",
            "style": [
                "point"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0.7
                    },
                    "fill": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "mean"
                    },
                    "y": {
                        "scale": "y",
                        "field": "variety",
                        "band": 0.5
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "rule",
            "style": [
                "rule"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "stroke": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "upper"
                    },
                    "y": {
                        "scale": "y",
                        "field": "variety",
                        "band": 0.5
                    },
                    "x2": {
                        "scale": "x",
                        "field": "lower"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "mean"
                    },
                    {
                        "data": "data_1",
                        "field": "upper"
                    },
                    {
                        "data": "data_1",
                        "field": "lower"
                    }
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "zero": false,
            "nice": true
        },
        {
            "name": "y",
            "type": "band",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "variety"
                    },
                    {
                        "data": "data_1",
                        "field": "variety"
                    }
                ],
                "sort": true
            },
            "range": {
                "step": {
                    "signal": "y_step"
                }
            },
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "grid": false,
            "title": "Barley Yield",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": false,
            "title": "variety",
            "labelOverlap": true,
            "zindex": 1
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
