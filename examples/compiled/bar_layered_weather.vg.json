{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "description": "A layered bar chart with floating bars representing weekly weather data",
    "autosize": "pad",
    "padding": 5,
    "width": 250,
    "height": 200,
    "title": {
        "text": "Weekly Weather Observations and Predictions"
    },
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/weather.json",
            "format": {
                "type": "json"
            }
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"record\"] && datum[\"record\"][\"low\"])",
                    "as": "record.low"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"record\"] && datum[\"record\"][\"high\"])",
                    "as": "record.high"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"record.low\"] !== null && !isNaN(datum[\"record.low\"])"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"normal\"] && datum[\"normal\"][\"low\"])",
                    "as": "normal.low"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"normal\"] && datum[\"normal\"][\"high\"])",
                    "as": "normal.high"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"normal.low\"] !== null && !isNaN(datum[\"normal.low\"])"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"actual\"] && datum[\"actual\"][\"low\"])",
                    "as": "actual.low"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"actual\"] && datum[\"actual\"][\"high\"])",
                    "as": "actual.high"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"actual.low\"] !== null && !isNaN(datum[\"actual.low\"])"
                }
            ]
        },
        {
            "name": "data_3",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"forecast\"] && datum[\"forecast\"][\"low\"] && datum[\"forecast\"][\"low\"][\"low\"])",
                    "as": "forecast.low.low"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"forecast\"] && datum[\"forecast\"][\"low\"] && datum[\"forecast\"][\"low\"][\"high\"])",
                    "as": "forecast.low.high"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"forecast.low.low\"] !== null && !isNaN(datum[\"forecast.low.low\"])"
                }
            ]
        },
        {
            "name": "data_4",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"forecast\"] && datum[\"forecast\"][\"low\"] && datum[\"forecast\"][\"low\"][\"high\"])",
                    "as": "forecast.low.high"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"forecast\"] && datum[\"forecast\"][\"high\"] && datum[\"forecast\"][\"high\"][\"low\"])",
                    "as": "forecast.high.low"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"forecast.low.high\"] !== null && !isNaN(datum[\"forecast.low.high\"])"
                }
            ]
        },
        {
            "name": "data_5",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"forecast\"] && datum[\"forecast\"][\"high\"] && datum[\"forecast\"][\"high\"][\"low\"])",
                    "as": "forecast.high.low"
                },
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"forecast\"] && datum[\"forecast\"][\"high\"] && datum[\"forecast\"][\"high\"][\"high\"])",
                    "as": "forecast.high.high"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"forecast.high.low\"] !== null && !isNaN(datum[\"forecast.high.low\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "rect",
            "style": [
                "bar",
                "box"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#ccc"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "id",
                        "band": 0.5
                    },
                    "width": {
                        "value": 20
                    },
                    "y": {
                        "scale": "y",
                        "field": "record\\.low"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "record\\.high"
                    }
                }
            }
        },
        {
            "name": "layer_1_marks",
            "type": "rect",
            "style": [
                "bar",
                "box"
            ],
            "from": {
                "data": "data_1"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#999"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "id",
                        "band": 0.5
                    },
                    "width": {
                        "value": 20
                    },
                    "y": {
                        "scale": "y",
                        "field": "normal\\.low"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "normal\\.high"
                    }
                }
            }
        },
        {
            "name": "layer_2_marks",
            "type": "rect",
            "style": [
                "bar",
                "box"
            ],
            "from": {
                "data": "data_2"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#000"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "id",
                        "band": 0.5
                    },
                    "width": {
                        "value": 12
                    },
                    "y": {
                        "scale": "y",
                        "field": "actual\\.low"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "actual\\.high"
                    }
                }
            }
        },
        {
            "name": "layer_3_marks",
            "type": "rect",
            "style": [
                "bar",
                "box"
            ],
            "from": {
                "data": "data_3"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#000"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "id",
                        "band": 0.5
                    },
                    "width": {
                        "value": 12
                    },
                    "y": {
                        "scale": "y",
                        "field": "forecast\\.low\\.low"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "forecast\\.low\\.high"
                    }
                }
            }
        },
        {
            "name": "layer_4_marks",
            "type": "rect",
            "style": [
                "bar",
                "box"
            ],
            "from": {
                "data": "data_4"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#000"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "id",
                        "band": 0.5
                    },
                    "width": {
                        "value": 3
                    },
                    "y": {
                        "scale": "y",
                        "field": "forecast\\.low\\.high"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "forecast\\.high\\.low"
                    }
                }
            }
        },
        {
            "name": "layer_5_marks",
            "type": "rect",
            "style": [
                "bar",
                "box"
            ],
            "from": {
                "data": "data_5"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#000"
                    },
                    "xc": {
                        "scale": "x",
                        "field": "id",
                        "band": 0.5
                    },
                    "width": {
                        "value": 12
                    },
                    "y": {
                        "scale": "y",
                        "field": "forecast\\.high\\.low"
                    },
                    "y2": {
                        "scale": "y",
                        "field": "forecast\\.high\\.high"
                    }
                }
            }
        },
        {
            "name": "layer_6_marks",
            "type": "text",
            "style": [
                "text"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "align": {
                        "value": "center"
                    },
                    "dy": {
                        "value": -105
                    },
                    "fill": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "id",
                        "band": 0.5
                    },
                    "y": {
                        "signal": "height",
                        "mult": 0.5
                    },
                    "text": {
                        "signal": "''+datum[\"day\"]"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "band",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "id"
                    },
                    {
                        "data": "data_1",
                        "field": "id"
                    },
                    {
                        "data": "data_2",
                        "field": "id"
                    },
                    {
                        "data": "data_3",
                        "field": "id"
                    },
                    {
                        "data": "data_4",
                        "field": "id"
                    },
                    {
                        "data": "data_5",
                        "field": "id"
                    },
                    {
                        "data": "source_0",
                        "field": "id"
                    }
                ],
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    [
                        10,
                        70
                    ],
                    {
                        "data": "data_1",
                        "field": "normal\\.low"
                    },
                    {
                        "data": "data_1",
                        "field": "normal\\.high"
                    },
                    {
                        "data": "data_2",
                        "field": "actual\\.low"
                    },
                    {
                        "data": "data_2",
                        "field": "actual\\.high"
                    },
                    {
                        "data": "data_3",
                        "field": "forecast\\.low\\.low"
                    },
                    {
                        "data": "data_3",
                        "field": "forecast\\.low\\.high"
                    },
                    {
                        "data": "data_4",
                        "field": "forecast\\.low\\.high"
                    },
                    {
                        "data": "data_4",
                        "field": "forecast\\.high\\.low"
                    },
                    {
                        "data": "data_5",
                        "field": "forecast\\.high\\.low"
                    },
                    {
                        "data": "data_5",
                        "field": "forecast\\.high\\.high"
                    }
                ]
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": false
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "top",
            "grid": false,
            "title": "Day",
            "domain": false,
            "labels": false,
            "ticks": false,
            "titlePadding": 25,
            "labelOverlap": true,
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": false,
            "title": "Temperature (F)",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "gridScale": "x",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
