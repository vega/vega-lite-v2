{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "autosize": "pad",
    "padding": 5,
    "width": 600,
    "height": 400,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/disasters.csv",
            "format": {
                "type": "csv",
                "parse": {
                    "Deaths": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.Entity !== 'All natural disasters'"
                },
                {
                    "type": "filter",
                    "expr": "datum[\"Deaths\"] !== null && !isNaN(datum[\"Deaths\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "symbol",
            "style": [
                "circle"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "opacity": {
                        "value": 0.8
                    },
                    "stroke": {
                        "value": "black"
                    },
                    "strokeWidth": {
                        "value": 1
                    },
                    "fill": {
                        "scale": "color",
                        "field": "Entity"
                    },
                    "x": {
                        "scale": "x",
                        "field": "Year"
                    },
                    "y": {
                        "scale": "y",
                        "field": "Entity"
                    },
                    "size": {
                        "scale": "size",
                        "field": "Deaths"
                    },
                    "shape": {
                        "value": "circle"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "point",
            "domain": {
                "data": "source_0",
                "field": "Year",
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "padding": 0.5
        },
        {
            "name": "y",
            "type": "point",
            "domain": {
                "data": "source_0",
                "field": "Entity",
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "height"
                }
            ],
            "padding": 0.5
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "Entity",
                "sort": true
            },
            "range": "category"
        },
        {
            "name": "size",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "Deaths"
            },
            "range": [
                0,
                5000
            ],
            "nice": false,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "grid": false,
            "title": "Year",
            "encode": {
                "labels": {
                    "update": {
                        "align": {
                            "value": "center"
                        },
                        "baseline": {
                            "value": "top"
                        }
                    }
                }
            },
            "labelOverlap": true,
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": false,
            "zindex": 1
        }
    ],
    "legends": [
        {
            "title": "Annual Global Deaths",
            "size": "size",
            "encode": {
                "symbols": {
                    "update": {
                        "stroke": {
                            "value": "black"
                        },
                        "shape": {
                            "value": "circle"
                        },
                        "opacity": {
                            "value": 0.8
                        }
                    }
                }
            }
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
