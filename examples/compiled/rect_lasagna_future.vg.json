{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "autosize": "pad",
    "padding": 5,
    "width": 300,
    "height": 100,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/stocks.csv",
            "format": {
                "type": "csv",
                "parse": {
                    "date": "date",
                    "price": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.symbol !== 'GOOG'"
                },
                {
                    "type": "formula",
                    "as": "yearmonthdate_date",
                    "expr": "datetime(year(datum[\"date\"]), month(datum[\"date\"]), date(datum[\"date\"]), 0, 0, 0, 0)"
                },
                {
                    "type": "aggregate",
                    "groupby": [
                        "yearmonthdate_date",
                        "symbol"
                    ],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "price"
                    ],
                    "as": [
                        "sum_price"
                    ]
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "rect",
            "style": [
                "rect"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "fill": {
                        "scale": "color",
                        "field": "sum_price"
                    },
                    "x": {
                        "scale": "x",
                        "field": "yearmonthdate_date"
                    },
                    "width": {
                        "scale": "x",
                        "band": true
                    },
                    "y": {
                        "scale": "y",
                        "field": "symbol"
                    },
                    "height": {
                        "scale": "y",
                        "band": true
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "band",
            "domain": {
                "data": "source_0",
                "field": "yearmonthdate_date",
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "paddingInner": 0,
            "paddingOuter": 0
        },
        {
            "name": "y",
            "type": "band",
            "domain": {
                "data": "source_0",
                "field": "symbol",
                "sort": true
            },
            "range": [
                0,
                {
                    "signal": "height"
                }
            ],
            "paddingInner": 0.1,
            "paddingOuter": 0.05
        },
        {
            "name": "color",
            "type": "sequential",
            "domain": {
                "data": "source_0",
                "field": "sum_price"
            },
            "range": "heatmap",
            "nice": false,
            "zero": false
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "grid": false,
            "title": "Time",
            "labelOverlap": false,
            "encode": {
                "labels": {
                    "update": {
                        "text": {
                            "signal": "timeFormat(datum.value, '%Y')"
                        },
                        "align": {
                            "value": "center"
                        },
                        "baseline": {
                            "value": "top"
                        },
                        "fill": [
                            {
                                "test": "time(datetime(0, month(datum[\"value\"]), date(datum[\"value\"]), 0, 0, 0, 0))===time(datetime(0, 0, 1, 0, 0, 0, 0))",
                                "value": "black"
                            },
                            {
                                "value": "none"
                            }
                        ]
                    }
                },
                "ticks": {
                    "update": {
                        "stroke": [
                            {
                                "test": "time(datetime(0, month(datum[\"value\"]), date(datum[\"value\"]), 0, 0, 0, 0))===time(datetime(0, 0, 1, 0, 0, 0, 0))",
                                "value": "black"
                            },
                            {
                                "value": "none"
                            }
                        ]
                    }
                }
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": false,
            "zindex": 1
        }
    ],
    "legends": [
        {
            "title": "Price",
            "fill": "color",
            "type": "gradient"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        },
        "range": {
            "heatmap": {
                "scheme": "viridis",
                "extent": [
                    1,
                    0
                ]
            }
        }
    }
}
