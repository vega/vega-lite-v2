{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "autosize": "pad",
    "padding": 5,
    "width": 800,
    "height": 500,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/co2-concentration.csv",
            "format": {
                "type": "csv",
                "parse": {
                    "Date": "utc:'%Y-%m-%d'"
                }
            },
            "transform": [
                {
                    "type": "formula",
                    "expr": "year(datum.Date)",
                    "as": "year"
                },
                {
                    "type": "formula",
                    "expr": "month(datum.Date)",
                    "as": "month"
                },
                {
                    "type": "formula",
                    "expr": "floor(datum.year / 10) + 'x'",
                    "as": "decade"
                },
                {
                    "type": "formula",
                    "expr": "(datum.year % 10) + (datum.month/12)",
                    "as": "scaled_date"
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"CO2\"])",
                    "as": "CO2"
                }
            ]
        },
        {
            "name": "data_1",
            "source": "source_0",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "decade"
                    ],
                    "ops": [
                        "argmin",
                        "argmax"
                    ],
                    "fields": [
                        "scaled_date",
                        "scaled_date"
                    ],
                    "as": [
                        "start",
                        "end"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "datum.start.scaled_date",
                    "as": "scaled_date_start"
                },
                {
                    "type": "formula",
                    "expr": "datum.start.CO2",
                    "as": "CO2_start"
                },
                {
                    "type": "formula",
                    "expr": "datum.start.year",
                    "as": "year_start"
                },
                {
                    "type": "formula",
                    "expr": "datum.end.scaled_date",
                    "as": "scaled_date_end"
                },
                {
                    "type": "formula",
                    "expr": "datum.end.CO2",
                    "as": "CO2_end"
                },
                {
                    "type": "formula",
                    "expr": "datum.end.year",
                    "as": "year_end"
                }
            ]
        },
        {
            "name": "data_2",
            "source": "data_1",
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"scaled_date_start\"] !== null && !isNaN(datum[\"scaled_date_start\"]) && datum[\"CO2_start\"] !== null && !isNaN(datum[\"CO2_start\"])"
                }
            ]
        },
        {
            "name": "data_3",
            "source": "data_1",
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum[\"scaled_date_end\"] !== null && !isNaN(datum[\"scaled_date_end\"]) && datum[\"CO2_end\"] !== null && !isNaN(datum[\"CO2_end\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "layer_0_pathgroup",
            "type": "group",
            "from": {
                "facet": {
                    "name": "faceted_path_layer_0_main",
                    "data": "data_0",
                    "groupby": [
                        "decade",
                        "decade"
                    ]
                }
            },
            "encode": {
                "update": {
                    "width": {
                        "field": {
                            "group": "width"
                        }
                    },
                    "height": {
                        "field": {
                            "group": "height"
                        }
                    }
                }
            },
            "marks": [
                {
                    "name": "layer_0_marks",
                    "type": "line",
                    "style": [
                        "line"
                    ],
                    "sort": {
                        "field": "datum[\"scaled_date\"]",
                        "order": "descending"
                    },
                    "from": {
                        "data": "faceted_path_layer_0_main"
                    },
                    "encode": {
                        "update": {
                            "stroke": {
                                "scale": "color",
                                "field": "decade"
                            },
                            "x": {
                                "scale": "x",
                                "field": "scaled_date"
                            },
                            "y": {
                                "scale": "y",
                                "field": "CO2"
                            },
                            "defined": {
                                "signal": "datum[\"scaled_date\"] !== null && !isNaN(datum[\"scaled_date\"]) && datum[\"CO2\"] !== null && !isNaN(datum[\"CO2\"])"
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "layer_1_layer_0_marks",
            "type": "text",
            "style": [
                "text"
            ],
            "from": {
                "data": "data_2"
            },
            "encode": {
                "update": {
                    "align": {
                        "value": "left"
                    },
                    "baseline": {
                        "value": "top"
                    },
                    "dx": {
                        "value": 3
                    },
                    "dy": {
                        "value": 1
                    },
                    "fill": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "scaled_date_start"
                    },
                    "y": {
                        "scale": "y",
                        "field": "CO2_start"
                    },
                    "text": {
                        "signal": "''+datum[\"year_start\"]"
                    }
                }
            }
        },
        {
            "name": "layer_1_layer_1_marks",
            "type": "text",
            "style": [
                "text"
            ],
            "from": {
                "data": "data_3"
            },
            "encode": {
                "update": {
                    "align": {
                        "value": "left"
                    },
                    "baseline": {
                        "value": "bottom"
                    },
                    "dx": {
                        "value": 3
                    },
                    "dy": {
                        "value": 1
                    },
                    "fill": {
                        "value": "black"
                    },
                    "x": {
                        "scale": "x",
                        "field": "scaled_date_end"
                    },
                    "y": {
                        "scale": "y",
                        "field": "CO2_end"
                    },
                    "text": {
                        "signal": "''+datum[\"year_end\"]"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "scaled_date"
                    },
                    {
                        "data": "data_2",
                        "field": "scaled_date_start"
                    },
                    {
                        "data": "data_3",
                        "field": "scaled_date_end"
                    }
                ]
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": false
        },
        {
            "name": "y",
            "type": "linear",
            "domain": {
                "fields": [
                    {
                        "data": "data_0",
                        "field": "CO2"
                    },
                    {
                        "data": "data_2",
                        "field": "CO2_start"
                    },
                    {
                        "data": "data_3",
                        "field": "CO2_end"
                    }
                ]
            },
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "zero": false,
            "nice": true
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "data_0",
                "field": "decade",
                "sort": true
            },
            "range": "category"
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "grid": false,
            "title": "Year into Decade",
            "tickCount": 11,
            "labelFlush": true,
            "labelOverlap": true,
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "tickCount": 11,
            "grid": true,
            "gridScale": "y",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": false,
            "title": "CO2 concentration in ppm",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "grid": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "gridScale": "x",
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "legends": [
        {
            "offset": 40,
            "stroke": "color",
            "title": "decade"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
