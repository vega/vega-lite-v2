{
    "$schema": "https://vega.github.io/schema/vega/v4.json",
    "autosize": "pad",
    "padding": 5,
    "width": 200,
    "height": 21,
    "style": "cell",
    "data": [
        {
            "name": "source_0",
            "url": "data/population.json",
            "format": {
                "type": "json",
                "parse": {
                    "people": "number"
                }
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.year == 2000"
                },
                {
                    "type": "aggregate",
                    "groupby": [],
                    "ops": [
                        "sum"
                    ],
                    "fields": [
                        "people"
                    ],
                    "as": [
                        "sum_people"
                    ]
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "marks",
            "type": "rect",
            "style": [
                "bar"
            ],
            "from": {
                "data": "source_0"
            },
            "encode": {
                "update": {
                    "fill": {
                        "value": "#4c78a8"
                    },
                    "x": {
                        "scale": "x",
                        "field": "sum_people"
                    },
                    "x2": {
                        "scale": "x",
                        "value": 0
                    },
                    "yc": {
                        "signal": "height",
                        "mult": 0.5
                    },
                    "height": {
                        "value": 20
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "source_0",
                "field": "sum_people"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "grid": false,
            "title": "population",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "grid": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "domain": false,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "ticks": false,
            "zindex": 0
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
